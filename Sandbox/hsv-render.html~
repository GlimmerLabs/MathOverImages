<html>

<head>
<title>Sample MOI HSV Rendering Using Javascript</title>
<script src="render.js"></script>
<script>
var animation = true;

function stopAnimation()
{
  animation=false;
} // stopAnimation 

function startAnimation()
{
  animation = true;
  frame();
} // startAnimation

function frame()
{
  var hfun = MOIbody2fun(document.getElementById("hfun").value);
  var sfun = MOIbody2fun(document.getElementById("sfun").value);
  var sfun = MOIbody2fun(document.getElementById("vfun").value);
  var canvas = document.getElementById("gui");
  renderHSV(hfun, sfun, vfun, canvas, 50, 50, 1000, 1000);
  if (animation)
    setTimeout(frame, 50);
} // frame
</script>
</head>

<body>
<h1>Sample MOI RGB Rendering</h1>
<canvas id="gui" width="500" height="500"></canvas>
<script>
var gui = document.getElementById("gui");
gui.onmousemove = function(evt) 
                     { 
                       var rect = gui.getBoundingClientRect();
                       setMouse(evt.clientX - rect.left, 
                                evt.clientY - rect.top);
                     };
gui.onmouseclick  = function(evt) 
                     { 
                       var rect = gui.getBoundingClientRect();
                       setClick(evt.clientX - rect.left, 
                                evt.clientY - rect.top);
                     };
gui.onmousedown = gui.onmouseclick;
</script>

<form>
<table>
  <tr>
    <td>Hue</td>
    <td><input type="text" name="left" id="hfun" size="100" value="m.x"/></td>
  </tr>
  <tr>
    <td>Saturation</td>
    <td><input type="text" name="top" id="sfun" size="100" value="m.y"/></td>
  </tr>
  <tr>
    <td>Value</td>
    <td><input type="text" name="top" id="vfun" size="100" value="t.s*MOIsign(x*x+y*y-0.5)"/></td>
  </tr>
</table>
<input type="button" value="Animate" onclick="startAnimation()">
<input type="button" value="Stop" onclick="stopAnimation()">
<input >
</form>
</body>
</html>
