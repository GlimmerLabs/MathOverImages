extends ./partials/framework
block title
  title= profileBeingViewed + "'s albums on MIST"

block extraMetas
block extraLinks
  script(type='text/javascript' src='/js/ugly.mist.js')
  script(type='text/javascript' src='/js/ugly.mistui.js')
  script(type='text/javascript' src='//code.jquery.com/ui/1.10.4/jquery-ui.js')
  script(type='text/javascript' src='/js/gallery.js')

block stylesheets
  link(rel='stylesheet', href='/css/albums')

block content
  div(id='main')
    div(id = 'pageTitle')
      h1= profileBeingViewed
    div(id = 'subviews')
      a(href='/user/'+ profileBeingViewed class='subview') profile
      a(href='/badges' class='subview') badges
      a(href='' class='subview' id='selected') albums
      a(href='/challenges' class='subview') challenges
    div(id = 'albums')
      a(href='/user/'+ profileBeingViewed + '/images/')
        h1.all All my Images >
      - for(var i=0; i < albums.length; i++)
        figure
          a(href='/user/' + profileBeingViewed + '/albums/' + albums[i].albumid)
              h1= albums[i].name
  if loggedIn && (user.username===profileBeingViewed)
    form(method='POST')
      textarea(name='newAlbum' required= 'required' placeholder='Enter new Album Name' cols='5' rows='5')
      input(type='submit'  value='Create New Album' id='submit' name='newAlbumSubmit')
