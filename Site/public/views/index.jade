extends ./partials/framework
block title
  title MIST by Glimmer
block extraMetas
  meta(name='google-site-verification' content='P8V7MGREuNuon08HmOnVFcxjSKSXUbpgyXCCIdCqP1o')
block extraLinks
  script(type='text/javascript' src='/js/ugly.mist.js')
  script(type='text/javascript' src='/js/ugly.mistui.js')
  script(type='text/javascript' src='//code.jquery.com/ui/1.10.4/jquery-ui.js')
  script(type='text/javascript' src='/js/gallery.js')

block stylesheets
  link(rel='stylesheet', href='/css/index.css')

block content
  div(id='main')
    div(id='featuredImage')
      img(src='/logos/featured.png')
    div(id='about')
      p
        | MIST, the
        i  Mathematical Image Synthesis Toolkit
        | , is a platform for building interesting animated images.
        | Try exploring the galleries, reading the tutorials, or
        | creating your own images.
      p
        | MIST is in pre-alpha release.  Look at the
        | <a href="/welcome">welcome page</a> for more information.
    div(id='homeButtons')
      a(href='/create' id='create')
         ='create'
      a(href='/help' id='tutorials')
         ='tutorials'
      a(href='/gallery' id='gallery')
         ='gallery'
    div(id='galleryImages')
      p(class='info')
        | Images with   
        img(src='/icons/time.png' width ='25 px' height='25 px')
        |    will animate when you hover over them
      - for (var i=0; i < images.length; i++)
        figure
          a(href='/image/' + images[i].imageid)
            canvas(id='canvas'+i width='150' height='150')
            input(type='hidden' id='code'+i value=images[i].code)
          if(images[i].code.indexOf("t.") > -1 || images[i].code.indexOf("m.") > -1)
              img(src='/icons/time.png' width ='20 px' height='20 px')
          figcaption(class='right'): a(href='/user/'+ images[i].username)= images[i].username
    div(id='epilepticWarning')
      p(class='warning').
        WARNING: Some of the images rendered on this site may feature flashing animations and patterns. For those with a history of epilepsy, viewer discretion is advised.
