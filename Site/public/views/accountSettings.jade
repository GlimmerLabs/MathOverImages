extends ./partials/framework
block title
	title Account Settings
block extraMetas
block extraLinks
	script(type='text/javascript' src='/js/accountSettings')
	script(type='text/javascript' src='js/signup')
block stylesheets
	link(rel='stylesheet', href='/css/styles')
	link(rel='stylesheet', href='/css/accountSettings')
block content
	div(id='main')
		div(id='pageTitle')
			h1 my settings
		div(id='flashZone')
			h1 Security is very important to us. Don't forget to change your password every now and again ;)
		form(method='POST')
			table
				tr
					td(id ='headers') username
					td(id='content')= user.username
					td: button(type='button'): img(src='/icons/edit_button.png' id='editButton')
				tr
					td(id='headers') change username:
					td(id='content'): input(type='username' name='newUsername' placeholder='username' class='signupField' id='newUsername')
				tr
					td(id='headers') reconfirm username:
					td(id='content'): input(type='username' name='newUsername2' placeholder='re-enter username' class='signupField' id='newUsername2')
				tr
					td(id ='headers') password
					td
					td: a(href='/passwordChange.jade'): button(type='button'): img(src='/icons/edit_button.png' id='editButton')
				tr
					td(id ='headers') new password:
					td(id='content')
						input(type='password' name='newPassword'  placeholder='password' class='signupField' )
				tr
					td(id ='headers') reconfirm password:
					td(id='content')
						input(type='password' name='newPassword2'  placeholder='re-enter password' class='signupField')
				tr
					td(id='headers') email
					td(id='content')=  user.email
					td: button(type='button'): img(src='/icons/edit_button.png' id='editButton')
				tr
					td(id ='headers') new primary email:
					td(id='content')
						input(type='email' name='newEmail'  placeholder='new email' class='signupField' id='newEmail1')
				tr
					td(id ='headers') confirm new email:
					td(id='content')
						input(type='email' name='newEmail2'  placeholder='re-enter email' class='signupField' id='newEmail2')
				tr
					td(id ='headers') current password:
					td(id='content')
						input(type='password' name='password1' required='required' placeholder='password' class='signupField' id='oldpassword')
			input(type='submit' name='submit' value ='submit')